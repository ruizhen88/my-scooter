








<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="form">
        <div class="banner_small" >
          <div class="banner-content">
            <h1>Write a review</h1>
          </div>
        </div>
        <div class="form-group">
          <%= simple_form_for [current_user, @booking, @review] do |f| %>
            <%= f.input :content, html5: true, placeholder:"Tell us about your experience" %>
            <%= f.input :rating, html5: true, collection: @rate, include_blank:false %>
            <%= f.submit "Post Review", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
