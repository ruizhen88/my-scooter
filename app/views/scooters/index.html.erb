<h1>Here be the scoots</h1>

<div class="container">
  <div class="row">
    <% @scooters.each do |scooter| %>
      <div class="col-xs-12 col-sm-3">
        <div class="card">
          <div class="card-image">
            <%= image_tag image_url('https://www.2twentyscooters.com/wp-content/uploads/2017/09/Scooter-bleu-1120_830.jpg') %>
          </div>
          <div class="card-description">
            <%= link_to(scooter) do %>
              <h2><%= scooter.make %> <%= scooter.model %> (<%= scooter.year %>)</h2>
              <p> <%= scooter.price %> IDR/day </p>
              <div class="card-description-right"><p><%= scooter.location %></p></div>
            <% end %>
          </div>
          <img src='https://kitt.lewagon.com/placeholder/users/krokrob' class="card-user avatar-large"/>
        </div>
      </div>
    <% end %>
  </div>
</div>
