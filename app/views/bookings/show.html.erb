<div class="container">
  <div class="container-box">
    <div class="photo-box">
      <%= cl_image_tag @booking.scooter.img, height: 300, width: 400, crop: :fill %>
    </div>
    <div class="summary-box">
      <h3>Status: <%= @booking.status %></h3>
      <p>You will be notified once the owner has accepted the booking request.</p>
      <br>
      <p>Scooter Model: <%= @booking.scooter.make %> <%= @booking.scooter.model %></p>
      <p>Rental Start Date: <%= @booking.start_date %></p>
      <p>Rental End Date:  <%= @booking.end_date %></p>
      <br>
      <p>Name: <%= @booking.user.first_name %> <%= @booking.user.last_name %></p>
      <br>
      <p>Total Price: IDR <%= @booking.amount %>
    </div>
    <%= link_to "View bookings", scooter_path(params[:scooter_id]) %>
    <%#= link_to "Message Owner", new_conversation_message_path %>
  </div>
</div>

